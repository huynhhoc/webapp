@model List<webapp.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Add Bootstrap CSS link here -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <div class="text-center">
            <h1 class="display-4">Simple eCommerce Website</h1>
        </div>

        <h2> Products </h2>
        <ul class="list-group">
            @foreach (var product in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@product.Name</span>
                    <span class="badge badge-primary badge-pill text-center">@product.Price</span>
                    <a href="@Url.Action("AddToCart", "Home", new { id = product.Id })" class="btn btn-primary">Add to Cart</a>
                    <!-- "Search" button -->
                    <form action="@Url.Action("Search", "Home")" method="post">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-primary">Details...</button>
                    </form>
                </li>
            }
        </ul>

        <p class="mt-3">
            <a href="@Url.Action("ViewCart", "Home")" class="btn btn-primary">View Cart</a>
        </p>
    </div>

    <!-- Add Bootstrap JS and jQuery scripts here -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
